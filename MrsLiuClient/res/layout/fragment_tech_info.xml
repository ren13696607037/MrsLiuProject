<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background"
    >

    <include layout="@layout/fragment_header" />

    <com.techfly.liutaitai.util.view.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pcenter_top"
                android:orientation="vertical"
                android:padding="@dimen/px_35" >

                <com.techfly.liutaitai.util.CircleImageView
                    android:id="@+id/tech_info_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/head_default" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_20" 
                android:background="@color/color_ea"
                />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp" 
                android:background="@color/color_be"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_40"
                android:layout_marginBottom="@dimen/px_30"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/px_10"
                    android:text="@string/pinfo_name"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/app_text_size_first" />

                <EditText
                    android:id="@+id/tech_info__name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_30"
                    android:background="@null"
                    android:hint="@string/pinfo_hint"
                    android:padding="@dimen/px_10"
                    android:textColorHint="@color/color_be"
                    android:textSize="@dimen/app_text_size_first" />
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp" 
                android:background="@color/color_be"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tech_info_sex"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/app_text_size_first" />

                <RadioGroup
                    android:id="@+id/tech_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_40"
                    android:layout_marginRight="@dimen/px_20"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/tech_info_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/radio_bg_selector"
                        android:drawablePadding="10dip"
                        android:padding="10dip"
                        android:text="@string/sex_man"
                        android:textColor="@color/color_33" />

                    <RadioButton
                        android:id="@+id/tech_info_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@drawable/radio_bg_selector"
                        android:drawablePadding="10dip"
                        android:padding="10dip"
                        android:text="@string/sex_woman"
                        android:textColor="@color/color_33" />
                </RadioGroup>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp" 
                android:background="@color/color_be"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/px_10"
                    android:text="@string/tech_info_city"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/app_text_size_first" />

                <TextView
                    android:id="@+id/tech_info_city"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_30"
                    android:hint="@string/tech_info_city"
                    android:padding="@dimen/px_10"
                    android:textColorHint="@color/color_33"
                    android:textSize="@dimen/app_text_size_first" />
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp" 
                android:background="@color/color_be"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_20"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/px_10"
                    android:text="@string/tech_info_address"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/app_text_size_first" />

                <EditText
                    android:id="@+id/tech_info_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px_30"
                    android:background="@null"
                    android:hint="@string/tech_info_address_hint"
                    android:padding="@dimen/px_10"
                    android:textColorHint="@color/color_be"
                    android:textSize="@dimen/app_text_size_first" />
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp" 
                android:background="@color/color_be"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                />
        </LinearLayout>
    </com.techfly.liutaitai.util.view.LoadingLayout>

</LinearLayout>