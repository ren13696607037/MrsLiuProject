<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <include layout="@layout/fragment_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_bar_height"
        android:background="@color/background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pcenter_top" >
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_be" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_20"
            android:background="@color/color_ea" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_be" />

        <RelativeLayout
            android:id="@+id/info_nick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_customer_background"
            android:padding="@dimen/px_20" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pinfo_name"
                android:textColor="@color/TextColorBLACK_NORMAL"
                android:textSize="@dimen/app_text_size_first" 
                android:layout_centerVertical="true"
                />

            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pcenter_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_be" 
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            />

        <RelativeLayout
            android:id="@+id/info_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_customer_background"
            android:padding="@dimen/px_20" >

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pinfo_pass"
                android:textColor="@color/TextColorBLACK_NORMAL"
                android:textSize="@dimen/app_text_size_first" 
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/info_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/pcenter_arrow" 
                android:layout_centerVertical="true"
                />
            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_be" 
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            />
    </LinearLayout>

</RelativeLayout>