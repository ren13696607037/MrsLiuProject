<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    
    
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/fragment_common" />
    
     <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal" >
        
    	<RelativeLayout
    		    android:layout_width="0dp"
                android:layout_height="match_parent"
    		    android:layout_weight="1"
    		>
    	
        <View
        	android:id="@+id/flag_img1"
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@color/color_black"
            />

    		  <TextView
    		      android:id="@+id/sort1"
    		      android:layout_width="wrap_content"
    		      android:layout_height="match_parent"
    		      android:layout_alignParentTop="true"
    		      android:layout_centerHorizontal="true"
    		      android:drawablePadding="3dp"
    		      android:drawableRight="@drawable/arrow_right"
    		      android:gravity="center"
    		      android:text="全部分类"
    		      android:textColor="@color/color_gray"
    		      android:textSize="@dimen/app_text_size_second" />

    	</RelativeLayout>
    	
    <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
            >
        
       <View
        	android:id="@+id/flag_img2"
            android:layout_width="1dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@color/color_black"
            />
             <TextView
    		      android:id="@+id/sort2"
    		      android:layout_width="wrap_content"
    		      android:layout_height="match_parent"
    		      android:layout_alignParentTop="true"
    		      android:layout_centerHorizontal="true"
    		      android:drawablePadding="3dp"
    		      android:drawableRight="@drawable/arrow_right"
    		      android:gravity="center"
    		      android:text="全城"
    		      android:textColor="@color/color_gray"
    		      android:textSize="@dimen/app_text_size_second" />
        </RelativeLayout>
        
    
    </LinearLayout>	
    
     <ImageView 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:src="@drawable/list_line"
         />
     
      <com.techfly.liutaitai.util.view.XListView
        android:id="@+id/xlistview"
        android:scrollbars="none"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:divider="@drawable/list_line"
        android:listSelector="@drawable/listview_item_click_select"
        />
    

</LinearLayout>

   
    
</FrameLayout>

