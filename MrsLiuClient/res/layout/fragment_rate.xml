<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background"
    >
    <include layout="@layout/fragment_header" />

    <com.hylsmart.yihui.util.view.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
       <ScrollView 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:scrollbars="none"
           >
           <LinearLayout 
               android:layout_width="match_parent"
        	   android:layout_height="match_parent"
        	   android:orientation="vertical"
               >
           <TextView 
               android:id="@+id/rate_time"
               android:layout_width="wrap_content"
        	   android:layout_height="wrap_content"
        	   android:layout_gravity="center_horizontal"
        	   android:text="@string/rate_text"
        	   android:textColor="@color/TextColorBLACK_SMALL"
        	   android:textSize="@dimen/app_text_size_second"
               />
           <com.hylsmart.yihui.util.view.ListViewForScrollView 
               android:id="@+id/rate_list"
               android:layout_width="match_parent"
        	   android:layout_height="match_parent"
               />
           <Button 
               android:id="@+id/rate_btn"
               android:layout_width="match_parent"
        	   android:layout_height="wrap_content"
        	   android:text="@string/rate_btn"
        	   android:textColor="@color/write"
        	   android:textSize="@dimen/app_text_size_first"
        	   android:background="@drawable/login_button_blue"
        	   android:layout_marginTop="30dp"
        	   android:layout_marginLeft="@dimen/px_30"
        	   android:layout_marginRight="@dimen/px_30"
        	   android:paddingTop="@dimen/px_20"
        	   android:paddingBottom="@dimen/px_20"
               />
           </LinearLayout>
       </ScrollView>
        
        </com.hylsmart.yihui.util.view.LoadingLayout>
    

</LinearLayout>
