<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_basket_item_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_20" >

        <TextView
            android:id="@+id/order_basket_item_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/px_5"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10"
            android:paddingTop="@dimen/px_5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_text_size_second" />

        <TextView
            android:id="@+id/order_basket_item_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textColor="@color/TextColorBLACK"
            android:textSize="@dimen/app_text_size_first" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_hight"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/icon_dash_line" />

    <com.techfly.liutaitai.util.view.ListViewForScrollView
        android:id="@+id/order_basket_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/line_color"
        android:dividerHeight="@dimen/divider_hight"
        android:footerDividersEnabled="true"
        android:listSelector="#00000000" >
    </com.techfly.liutaitai.util.view.ListViewForScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_20" >

        <TextView
            android:id="@+id/order_basket_item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/TextColorBLACK"
            android:textSize="@dimen/app_text_size_first" />

        <TextView
            android:id="@+id/order_basket_item_tv_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textColor="@color/TextColorOrange"
            android:textSize="@dimen/app_text_size_first" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_hight"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/icon_dash_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/px_20" >

        <TextView
            android:id="@+id/order_basket_item_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="待付款"
            android:textColor="@color/TextColorBLACK"
            android:textSize="@dimen/app_text_size_first" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/order_basket_item_tv_bt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_20"
            android:layout_weight="2"
            android:background="@drawable/button_order_blue"
            android:gravity="center"
            android:padding="@dimen/px_15"
            android:text="取消订单"
            android:textColor="@color/TextColorWhite"
            android:textSize="@dimen/app_text_size_first" />

        <TextView
            android:id="@+id/order_basket_item_tv_bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_20"
            android:layout_weight="2"
            android:background="@drawable/button_order_yellow"
            android:gravity="center"
            android:padding="@dimen/px_15"
            android:text="去付款"
            android:textColor="@android:color/white"
            android:textSize="@dimen/app_text_size_first" />
    </LinearLayout>

</LinearLayout>