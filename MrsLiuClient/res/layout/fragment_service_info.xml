<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    
    <include layout="@layout/fragment_header" />

    <com.techfly.liutaitai.util.view.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_bar_height" >

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/order_button_yellow"
            android:padding="@dimen/px_15"
            android:text="@string/submit"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/app_text_size_first" />
         <ScrollView 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:scrollbars="none"
               android:layout_above="@id/order"
               android:layout_alignParentTop="true"
             >
           <LinearLayout 
                android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <ImageView
                 android:id="@+id/img"
                 android:layout_width="match_parent"
                 android:layout_height="400dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/class_9" />
             <TextView 
                 android:id="@+id/name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:padding="12dp"
                 android:text="sss"
                 android:textColor="@color/color_black"
                 android:textSize="@dimen/app_text_size_first"
                 />
              <TextView 
                 android:id="@+id/price"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:padding="12dp"
                 android:text="sss"
                 android:textColor="@color/color_black"
                 android:textSize="@dimen/app_text_size_first"
                 />
              
              <TextView 
                 android:id="@+id/service_content"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:padding="12dp"
                 android:text="sss"
                 android:textColor="@color/color_black"
                 android:textSize="@dimen/app_text_size_first"
                 />
              <View 
                     android:layout_width="match_parent"
                 android:layout_height="1dp" 
                 android:background="@color/color_gray_dark"
                  />
              
              <TextView 
                 android:id="@+id/desc"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" 
                 android:padding="12dp"
                 android:text="sss"
                 android:textColor="@color/color_gray_dark"
                 android:textSize="@dimen/app_text_size_first"
                 />
               
           </LinearLayout>
            
             
         </ScrollView>
       

        
    </RelativeLayout>
</com.techfly.liutaitai.util.view.LoadingLayout>
</RelativeLayout>