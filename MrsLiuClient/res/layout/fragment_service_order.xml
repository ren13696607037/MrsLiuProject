<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <include layout="@layout/fragment_header" />

    <com.techfly.liutaitai.util.view.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/header_bar_height" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical" >

            <Button
                android:id="@+id/order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:background="@drawable/order_button_yellow"
                android:padding="@dimen/px_30"
                android:text="立即预约"
                android:textColor="@android:color/white"
                android:textSize="@dimen/app_text_size_first" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/order"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp" >

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_alignParentLeft="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_error" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/img"
                            android:text="天空星色版"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/name"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@id/img"
                            android:text="￥50/次"
                            android:textColor="@color/bg_header"
                            android:textSize="@dimen/app_text_size_first" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:id="@+id/yujia"
                        android:padding="12dp" >
                        <CheckBox 
                            android:id="@+id/checkbox"
                            style="@style/CustomCheckboxTheme"
                            android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="需要先御甲"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                      <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:padding="12dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_address"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/address"
                            android:text="请选择服务地点"
                            android:drawableEnd="@drawable/arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:padding="12dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_clock"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/clock"
                            android:text="请选择服务时间"
                            android:drawableEnd="@drawable/arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:padding="12dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_phone"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/phone"
                            android:text="15052368524"
                            android:drawableEnd="@drawable/arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                    
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:padding="12dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_voucher"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/voucher"
                            android:text="请选择代金券"
                            android:drawableEnd="@drawable/arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/listview_item_click_select"
                        android:orientation="horizontal"
                        android:padding="12dp" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_jishi"
                            />
                        <TextView 
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:id="@+id/jishi"
                            android:text="系统推荐技师"
                            android:drawableEnd="@drawable/arrow_right"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/app_text_size_first"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_gray_dark"
                         />
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>
    </com.techfly.liutaitai.util.view.LoadingLayout>

</RelativeLayout>