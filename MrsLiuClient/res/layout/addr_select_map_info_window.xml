<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_window_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_info_window"
    android:orientation="horizontal"
    android:padding="@dimen/px_20" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_15"
        android:layout_marginRight="@dimen/px_15"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="点击确认地址"
        android:textColor="@color/TextColor_WHITE"
        android:textSize="@dimen/app_text_size_second" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/icon_info_window_check" />

</LinearLayout>